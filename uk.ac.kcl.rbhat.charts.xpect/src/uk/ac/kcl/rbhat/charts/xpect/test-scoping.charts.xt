/* XPECT_SETUP uk.ac.kcl.rbhat.charts.xpect.XPectTests END_SETUP */
data_source sales_data from "sales.csv" {
	month: ordinal, categorical
	product: categorical
	revenue: measurable
	units_sold: measurable
}
line_chart {
	// XPECT scope at sales_data --> sales_data, !inventory_data
	data: sales_data
	title: "Monthly Revenue"
	// XPECT scope at month --> month, revenue, product, units_sold, !item, !week, !location, !quantity
	x_axis: month
	// XPECT scope at revenue --> month, revenue, product, units_sold, !item, !week, !location, !quantity
	y_axis: revenue
	colour: blue
}
data_source inventory_data from "inventory.csv" {
	item: categorical
	week: ordinal, categorical
	location: categorical
	quantity: measurable
}
line_chart {
	// XPECT scope at inventory_data --> sales_data, inventory_data
	data: inventory_data
	title: "Inventory"
	// XPECT scope at week --> item, week, location, quantity, !month, !revenue, !product, !units_sold
	x_axis: week
	// XPECT scope at quantity --> item, week, location, quantity, !month, !revenue, !product, !units_sold
	y_axis: quantity
	// XPECT scope at location --> item, week, location, quantity, !month, !revenue, !product, !units_sold
	split_by: location
}